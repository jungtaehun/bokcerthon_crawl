<%= content_tag :h1, "영화 검색" %>

<%= form_tag("/home/result", method: "get") do %>
    <%= label_tag(:search, "영화 검색:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("검색") %>
<% end %>

<% @link.each_with_index do |l, i| %>
    <%= content_tag :a, @title[i].inner_text,  href: "http://www.cine21.com#{l["href"]}"  %>
    <%= content_tag :br %>
<% end %>